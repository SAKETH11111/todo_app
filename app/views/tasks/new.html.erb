<turbo-frame id="tasks-list">
  <div class="max-w-2xl mx-auto rounded-2xl border border-[var(--border)] bg-[var(--card)] p-5 shadow-sm-var">
    <div class="flex items-center justify-between mb-3">
      <h2 class="text-xl font-semibold text-[var(--foreground)]">New Task</h2>
      <%= link_to "Cancel", tasks_path, data: { turbo_frame: "tasks-list" }, class: "px-3 py-1.5 rounded-xl border border-[var(--border)] text-[var(--foreground)] hover:opacity-90" %>
    </div>

    <%= render "tasks/form", task: @task, cancel_path: tasks_path, cancel_frame: "tasks-list" %>
  </div>
</turbo-frame>